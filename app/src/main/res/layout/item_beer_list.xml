<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/beerIv"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_marginStart="27dp"
            android:layout_marginTop="27dp"
            android:src="@drawable/ic_launcher_background"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />


        <TextView
            android:id="@+id/beerNameTv"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginTop="27dp"
            android:maxWidth="200dp"
            android:maxLines="1"
            android:text="KingFisher"
            android:textColor="?attr/colorOnBackground"
            android:textSize="14sp"
            app:layout_constraintStart_toEndOf="@id/beerIv"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/beerTagTv"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginTop="4dp"
            android:maxWidth="200dp"
            android:maxLines="1"
            android:text="King of all"
            android:textSize="13sp"
            app:layout_constraintStart_toEndOf="@id/beerIv"
            app:layout_constraintTop_toBottomOf="@id/beerNameTv" />

        <ImageView
            android:id="@+id/whatsappIv"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginEnd="27dp"
            android:layout_marginTop="15dp"
            android:src="@drawable/ic_whatsapp_icon"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>